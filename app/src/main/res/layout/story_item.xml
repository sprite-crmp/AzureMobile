<?xml version="1.0" encoding="utf-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_marginEnd="@dimen/_6sdp">

	<FrameLayout
		android:id="@+id/container"
		android:layout_width="0.0dip"
		android:layout_height="0.0dip"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintDimensionRatio="250:280"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.cardview.widget.CardView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_marginStart="@dimen/_4sdp"
			android:layout_marginTop="@dimen/_4sdp"
			android:layout_marginEnd="@dimen/_4sdp"
			android:layout_marginBottom="@dimen/_4sdp"
			app:cardBackgroundColor="@android:color/transparent"
			app:cardCornerRadius="@dimen/_4sdp"
			app:cardElevation="0.0dip"
			app:cardMaxElevation="0.0dip"
			app:cardPreventCornerOverlap="false"
			app:cardUseCompatPadding="false">

			<ImageView
				android:id="@id/story_item_image"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:scaleType="fitXY" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				app:srcCompat="@drawable/story_fg" />
		</androidx.cardview.widget.CardView>
	</FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
