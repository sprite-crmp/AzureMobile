<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adobnova"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

    <ImageView
        android:id="@+id/adclose"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_hud_fcm_bell" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="168dp"
        android:layout_height="67dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/adclose"
        app:layout_constraintStart_toEndOf="@+id/adclose"
        app:layout_constraintTop_toTopOf="@+id/adclose"
        app:srcCompat="@drawable/auth_bg_email" />

    <TextView
        android:id="@+id/text_message"
        android:layout_width="156dp"
        android:layout_height="59dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Сегодня 24.09.2024 в 0:00 будет рестарт сервера для загрузки весеннего обновления"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />

</androidx.constraintlayout.widget.ConstraintLayout>