<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ruda"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:visibility="invisible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ruda">

        <ImageView
            android:id="@+id/imageView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView23"
            app:layout_constraintEnd_toStartOf="@+id/textView23"
            app:layout_constraintTop_toTopOf="@+id/textView23"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Найдите и нажмите на уголь, чтобы поднять руду"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ugolruda"
            android:layout_width="92dp"
            android:layout_height="75dp"
            android:layout_marginEnd="128dp"
            android:layout_marginBottom="216dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ugol" />

        <ImageView
            android:id="@+id/zolotoruda"
            android:layout_width="108dp"
            android:layout_height="100dp"
            android:layout_marginStart="112dp"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/zoloto" />

        <ImageView
            android:id="@+id/zhelesoruda"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ugolruda"
            app:srcCompat="@drawable/zheleso" />

        <ImageView
            android:id="@+id/kamenruda"
            android:layout_width="104dp"
            android:layout_height="96dp"
            android:layout_marginTop="120dp"
            app:layout_constraintEnd_toStartOf="@+id/ugolruda"
            app:layout_constraintHorizontal_bias="0.427"
            app:layout_constraintStart_toEndOf="@+id/zolotoruda"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kamen" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>